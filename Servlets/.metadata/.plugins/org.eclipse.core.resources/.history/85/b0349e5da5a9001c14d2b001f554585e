<%
	request.setCharacterEncoding("utf-8");
	String userid = request.getParameter("userid");
	ArrayList<String> userInfo = new ArrayList<String>();
	
	String url_mysql = "jdbc:mysql://localhost:3306/customer?serverTimezone=Asia/Seoul&characterEncoding=utf8&useSSL=false";
	String id_mysql = "root";
	String pw_mysql = "qwer1234";
	
	String query = "select * from purchaserinfo where userid = '" + userid + "'";
	try{
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection conn_mysql = DriverManager.getConnection(url_mysql, id_mysql, pw_mysql);
		Statement stmt_mysql = conn_mysql.createStatement();
		
		ResultSet rs = stmt_mysql.executeQuery(query);
		
		int i = 1;
		while(rs.next()) {
			userInfo.add(i-1, rs.getString(i));
		}
		
		conn_mysql.close();
		session.setAttribute("OLD", strUserid);		
		
	} catch(Exception e) {
		e.printStackTrace();
	}
	
