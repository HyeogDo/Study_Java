* 목적 : 객체지향 프로그래밍 연습
*/

public class Calc {
	
	// Field
	public int num1;
	public int num2 = 1;

	// Constructor
	public Calc() {
		// TODO Auto-generated constructor stub
	}
	
	// Method
	
	public void additionNum() {
		System.out.println(num1 + " + " + num2 + " = " +  additionNumReturn());
	}
	public void subtractionNum() {
		System.out.println(num1 + " - " + num2 + " = " + subtractionNumReturn());
	}
	public void multiplicationNum() {
		System.out.println(num1 + " * " + num2 + " = " +  multiplicationNumReturn());
	}
	public void divisionNum() {
		System.out.println(num1 + " / " + num2 + " = " + divisionNumReturn() );
	}
	
	// 리턴값 주는 방법
	public int additionNumReturn() {
		return num1 + num2;
	}
	public int subtractionNumReturn() {
		return num1 - num2;
	}
	public int multiplicationNumReturn() {
		return num1 * num2;
	}
	public int divisionNumReturn() {
		return num1 / num2;
	}

}
