/*
* 작성자 : 권혁도
* 생성일 : 2022/03/02
* 최종 수정일 : 2022/03/02
* 목적 : 객체지향 프로그래밍 연습
*/

public class Calc {
	
	// Field
	public int num1;
	public int num2;
	public int result_additionNum = num1 + num2;
	public int result_subtractionNum = num1 - num2;
	public int result_multiplicationNum = num1 * num2;
	public int result_divisionNum = num1 / num2;
	
	// Constructor
	public Calc() {
		// TODO Auto-generated constructor stub
	}
	
	// Method
	
	public void additionNum() {
		System.out.println(num1 + " + " + num2 + " = " + result_additionNum );
	}
	public void subtractionNum() {
		System.out.println(num1 + " - " + num2 + " = " + result_subtractionNum);
	}
	public void multiplicationNum() {
		System.out.println(num1 + " * " + num2 + " = " + result_multiplicationNum );
	}
	public void divisionNum() {
		System.out.println(num1 + " / " + num2 + " = " + result_divisionNum );
	}
	
	// 리턴값 주는 방법
	public int additionNumReturn() {
		return result_additionNum;
	}
	public int subtractionNumReturn() {
		return result_subtractionNum;
	}
	public int multiplicationNumReturn() {
		return result_multiplicationNum;
	}
	public int divisionNumReturn() {
		return result_divisionNum;
	}

}
