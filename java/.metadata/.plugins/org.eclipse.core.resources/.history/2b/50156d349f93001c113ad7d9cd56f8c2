package com.javalec.base;

public class Base {

	public static void main(String[] args) {
		// 	연산자 종류별 출력
		int i = 10, j = 2, k = 5;
		
		// < 산술 연산자 >
		/*
		 * 덧셈 : 10 + 2 = 12
		 * 뺄셈 : 10 - 2 = 8
		 * 곱셈 : 10 * 2 = 20
		 * 나눗셈 : 10 / 2 = 5
		 * 나머지 : 10 % 2 = 0
		 * 
		 */
		
		System.out.println(i + " + " + j + " = " + (i+j));
		System.out.println(i + " - " + j + " = " + (i-j));
		System.out.println(i + " * " + j + " = " + (i*j));
		System.out.println(i + " / " + j + " = " + (i/j));
		System.out.println(i + " % " + j + " = " + (i%j));
		
		

	}

}
