public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//Scanner를 이용한 입력 받기
		Scanner scanner = new Scanner(System.in);
		
		System.out.print("숫자를 입력해 주세요 : ");
		int intNum1 = scanner.nextInt();
		System.out.println("입력한 숫자는 " + intNum1 + "입니다.");
		
	}

}
