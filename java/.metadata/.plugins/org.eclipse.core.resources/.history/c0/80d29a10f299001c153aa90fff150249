* 목적 : 객체지향 프로그래밍 연습
*/

public class Calc {
	
	// Field
	public int num1;
	public int num2;

	// Constructor
	public Calc() {
		// TODO Auto-generated constructor stub
	}
	
	// Method
	public void calcAll() {
		System.out.println(additionNum());
		subtractionNum();
		multiplicationNum();
		divisionNum();
	}
	
	private String additionNum() {
		return (num1 + " + " + num2 + " = " +  additionNumReturn());
	}
	private String subtractionNum() {
		return (num1 + " - " + num2 + " = " + subtractionNumReturn());
	}
	private String multiplicationNum() {
		return (num1 + " * " + num2 + " = " +  multiplicationNumReturn());
	}
	private String divisionNum() {
		return (num1 + " / " + num2 + " = " + divisionNumReturn() );
	}
	
	// 리턴값 주는 방법
	public int additionNumReturn() {
		return num1 + num2;
	}
	public int subtractionNumReturn() {
		return num1 - num2;
	}
	public int multiplicationNumReturn() {
		return num1 * num2;
	}
	public double divisionNumReturn() {
		return  num1 / num2;
	}
	
	

}
