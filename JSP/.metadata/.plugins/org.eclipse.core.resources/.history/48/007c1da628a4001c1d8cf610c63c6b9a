		<%
			int a = 30;
			int b = 20;
			int addition = a + b;
			int subtraction = a - b;
			int multiplication = a * b;
			int division = a / b;
			int remainder = a % b;
		%>		
		<%=a %> + <%=b %> = <%=addition %> <br>
		<% 
			out.println(a + " + " + b + " = " + addition);
			out.println(a + " - " + b + " = " + subtraction);
			out.println(a + " * " + b + " = " + multiplication);
			out.println(a + " / " + b + " = " + division);
			out.println(a + " % " + b + " = " + remainder);
		%>
		
