		<%!
			public int power(int a, int b) {
				return a * b;
			}
		%>
		
		<%
			int res2 = 1;
			for (int i = 1; i <= 5; i++ ) {
				out.print(2 + " ^ " + i + " = " + power(2,res2) + "<br>");
				res2 *= 2;
			}
		%>
		
