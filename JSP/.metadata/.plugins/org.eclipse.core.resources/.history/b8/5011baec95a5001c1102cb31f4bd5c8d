<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Insert title here</title>
	</head>
	<body>
		<%
			int weight;
			double height;
			weight = Integer.parseInt(request.getParameter("weight"));
			height = Double.parseDouble(request.getParameter("height")) * 0.01;
			double bmi =  weight / (height * height);
		%>
		<%!
			public String bmiStatus(double bmi) {
				String res = "null";
				if (bmi < 18.5) {
					res = "저체중";
				} else if (bmi < 23) {
					res = "정상";
				} else if (bmi < 25) {
					res = "과체중";
				} else {
					res = "비만";
				}
				return res;
			}
		%>
		<img alt="bmiTable" src="./imgsrc/bmiTable.png">
		<h1>당신의 BMI는 <%=String.format("%2.2f", bmi) %>입니다.</h1><br>
		<h1>당신은 <%=bmiStatus(bmi) %>입니다.</h1>
	</body>
</html>