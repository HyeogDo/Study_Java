			out.println(a + " + " + b + " = " + addition + "<br>");
			out.println(a + " - " + b + " = " + subtraction + "<br>");
			out.println(a + " * " + b + " = " + multiplication + "<br>");
			out.println(a + " / " + b + " = " + division + "<br>");
			out.println(a + " % " + b + " = " + remainder + "<br>");
		%>
		
